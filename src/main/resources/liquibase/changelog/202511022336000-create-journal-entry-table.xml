<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Changeset 1: Create sequence for journal_entry ID generation -->
    <changeSet id="202511022336000-1" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists schemaName="ledger" sequenceName="journal_entry_seq"/>
            </not>
        </preConditions>
        <createSequence schemaName="ledger" sequenceName="journal_entry_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <!-- Changeset 2: Create journal_entry table -->
    <changeSet id="202511022336000-2" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="ledger" tableName="journal_entry"/>
            </not>
        </preConditions>
        <createTable schemaName="ledger" tableName="journal_entry">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_journal_entry"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="memo" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="transaction_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="updated_on" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="updated_by" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Changeset 3: Create journal_entry audit table -->
    <changeSet id="202511022336000-3" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="ledger" tableName="journal_entry_aud"/>
            </not>
        </preConditions>
        <createTable schemaName="ledger" tableName="journal_entry_aud">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rev" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="revtype" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="memo" type="VARCHAR(255)"/>
            <column name="transaction_date" type="TIMESTAMP"/>
            <column name="created_on" type="TIMESTAMP"/>
            <column name="created_by" type="BIGINT"/>
            <column name="updated_on" type="TIMESTAMP"/>
            <column name="updated_by" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- Changeset 4: Add primary key to journal_entry_aud table -->
    <changeSet id="202511022336000-4" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists schemaName="ledger" tableName="journal_entry_aud" primaryKeyName="pk_journal_entry_aud"/>
            </not>
        </preConditions>
        <addPrimaryKey
                schemaName="ledger"
                tableName="journal_entry_aud"
                columnNames="id, rev"
                constraintName="pk_journal_entry_aud"/>
    </changeSet>

</databaseChangeLog>

