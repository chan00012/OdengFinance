<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Changeset 1: Create ledger schema -->
    <changeSet id="202511022334000-1" author="crobles">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM information_schema.schemata WHERE schema_name = 'ledger'
            </sqlCheck>
        </preConditions>
        <sql>CREATE SCHEMA ledger</sql>
    </changeSet>

    <!-- Changeset 2: Create sequence for account ID generation -->
    <changeSet id="202511022334000-2" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists schemaName="ledger" sequenceName="account_seq"/>
            </not>
        </preConditions>
        <createSequence schemaName="ledger" sequenceName="account_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <!-- Changeset 3: Create account table -->
    <changeSet id="202511022334000-3" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="ledger" tableName="account"/>
            </not>
        </preConditions>
        <createTable schemaName="ledger" tableName="account">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_account"/>
            </column>
            <column name="user_group_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="account_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="updated_on" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="updated_by" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Changeset 4: Create account audit table -->
    <changeSet id="202511022334000-4" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="ledger" tableName="account_aud"/>
            </not>
        </preConditions>
        <createTable schemaName="ledger" tableName="account_aud">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rev" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="revtype" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_group_id" type="BIGINT"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="account_type" type="VARCHAR(50)"/>
            <column name="is_active" type="BOOLEAN"/>
            <column name="created_on" type="TIMESTAMP"/>
            <column name="created_by" type="BIGINT"/>
            <column name="updated_on" type="TIMESTAMP"/>
            <column name="updated_by" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- Changeset 5: Add primary key to account_aud table -->
    <changeSet id="202511022334000-5" author="crobles">
        <preConditions onFail="MARK_RAN">
            <not>
                <primaryKeyExists schemaName="ledger" tableName="account_aud" primaryKeyName="pk_account_aud"/>
            </not>
        </preConditions>
        <addPrimaryKey
                schemaName="ledger"
                tableName="account_aud"
                columnNames="id, rev"
                constraintName="pk_account_aud"/>
    </changeSet>


</databaseChangeLog>

